<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:common="clr-namespace:TaskList.Common"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="TaskList.Presentation.MainWindow"
        Icon="/Presentation/Resources/Main.ico"
        Title="Task List">
  <Window.Resources>
    <common:VisibilityConverter x:Key="Converter" />
    <Style TargetType="{x:Type TextBlock}"
           x:Key="GridBlockStyle">
      <Setter Property="VerticalAlignment"
              Value="Center" />
      <Setter Property="Visibility"
              Value="{Binding Path=IsSelected,
                              RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListViewItem}},
                              Converter={StaticResource Converter},
                              ConverterParameter=False}" />
    </Style>
  </Window.Resources>
  <Grid>
    <ListView x:Name="ListView"
              ItemsSource="{Binding Tasks}"
              SelectionMode="Single">
      <ListView.View>
        <GridView AllowsColumnReorder="True">
          <GridViewColumn DisplayMemberBinding="{Binding Path=Id}"
                          Header="ID"
                          Width="70" />
          <GridViewColumn DisplayMemberBinding="{Binding Path=Title}"
                          Header="Title"
                          Width="200" />
        </GridView>
      </ListView.View>
    </ListView>
  </Grid>
</Window>
