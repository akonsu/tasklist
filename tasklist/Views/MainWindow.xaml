<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:common="clr-namespace:TaskList.Common"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="TaskList.Views.MainWindow"
        Icon="/Views/Resources/Main.ico"
        Title="Task List">
  <DockPanel>
    <Grid DockPanel.Dock="Top"
          FocusManager.FocusedElement="{Binding ElementName=TitleBox}">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="Auto" />
      </Grid.ColumnDefinitions>
      <TextBox Name="TitleBox"
               Text="{Binding NewTitle}"
               Grid.Column="0" />
      <Button Command="{Binding CreateTask}"
              Grid.Column="1">Create</Button>
    </Grid>
    <DataGrid ItemsSource="{Binding IncompleteTasks.View}"
              AutoGenerateColumns="False"
              SelectionMode="Single">
      <DataGrid.Columns>
        <DataGridCheckBoxColumn Header="Complete"
                                Binding="{Binding Complete}" />
        <DataGridTextColumn Header="Title"
                            Binding="{Binding Title}" />
      </DataGrid.Columns>
    </DataGrid>
  </DockPanel>
</Window>
