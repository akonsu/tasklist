<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:common="clr-namespace:TaskList.Common"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="TaskList.Views.MainWindow"
        Icon="/Views/Resources/Main.ico"
        Title="Task List">
  <Grid>
    <DataGrid ItemsSource="{Binding Tasks}"
              AutoGenerateColumns="False"
              SelectionMode="Single">
      <DataGrid.Columns>
        <DataGridCheckBoxColumn Header="Complete"
                                Binding="{Binding Complete}" />
        <DataGridTextColumn Header="Title"
                            Binding="{Binding Title}" />
      </DataGrid.Columns>
    </DataGrid>
  </Grid>
</Window>
